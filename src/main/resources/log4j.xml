<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c(%F:%L) [%t]%x %m%n" />
        </layout>
    </appender>

    <logger name="io.github.wtog.actor.DownloaderActorRevicer" additivity="false">
        <level value="debug" />
        <appender-ref ref="stdout" />
    </logger>

    <logger name="org.apache" additivity="false">
        <level value="info" />
        <appender-ref ref="stdout" />
    </logger>

    <logger name="org.apache.http" additivity="false">
        <level value="warn" />
        <appender-ref ref="stdout" />
    </logger>

    <logger name="org.apache.http.wire" additivity="false">
        <level value="error" />
        <appender-ref ref="stdout" />
    </logger>

    <logger name="akka" additivity="false">
        <level value="warn" />
        <appender-ref ref="stdout" />
    </logger>

    <logger name="org.quartz.core.QuartzScheduler" additivity="false">
        <level value="warn" />
        <appender-ref ref="stdout" />
    </logger>

    <root>
        <level value="info" />
        <appender-ref ref="stdout" />
    </root>

</log4j:configuration>
